#--------------------------------------------------------------------
# Example Environment Configuration file
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = your_username
database.default.password = your_password
database.default.DBDriver = MySQLi
database.default.port = 3307

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
encryption.key = your_encryption_key_here

#--------------------------------------------------------------------
# BREVO EMAIL SERVICE
#--------------------------------------------------------------------
brevo.apiKey = your_brevo_api_key_here
brevo.fromEmail = your-email@example.com
brevo.fromName = Your App Name

#--------------------------------------------------------------------
# FRONTEND URL (for email links)
#--------------------------------------------------------------------
# Development: http://localhost:3000/build
# Production: https://yourdomain.com
app.frontendURL = http://localhost:3000/build

#--------------------------------------------------------------------
# PRODUCTION EXAMPLE:
#--------------------------------------------------------------------
# CI_ENVIRONMENT = production
# app.frontendURL = https://jamwithjamie.com
# (or if frontend is on subdomain)
# app.frontendURL = https://app.jamwithjamie.com
