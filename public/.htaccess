<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ðŸš« No reescribir peticiones a archivos o carpetas existentes
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # âœ… Permitir que Vue sirva sus archivos compilados (build/assets)
    RewriteCond %{REQUEST_URI} ^/build/ [OR]
    RewriteCond %{REQUEST_URI} ^/assets/ [OR]
    RewriteCond %{REQUEST_URI} ^/favicon.ico$
    RewriteRule ^ - [L]

    # ðŸ”„ Todo lo demÃ¡s pasa por CodeIgniter
    RewriteRule ^ index.php [L]
</IfModule>
