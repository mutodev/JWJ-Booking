<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # üîê Pasar el header Authorization a PHP
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # üö´ No reescribir peticiones a archivos o carpetas existentes
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # ‚úÖ Permitir que Vue sirva sus archivos compilados (build/assets)
    RewriteCond %{REQUEST_URI} ^/build/ [OR]
    RewriteCond %{REQUEST_URI} ^/assets/ [OR]
    RewriteCond %{REQUEST_URI} ^/favicon.ico$
    RewriteRule ^ - [L]

    # üîÑ Todo lo dem√°s pasa por CodeIgniter
    RewriteRule ^ index.php [L]
</IfModule>
